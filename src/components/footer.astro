---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://www.neighbourly.co.nz/business/astro-media",
    description: "Astro on Neighbourly",
    icon: "clarity:house-solid",
  },
  {
    url: "https://www.instagram.com/astromedianz",
    description: "Astro on Instagram",
    icon: "mdi:instagram",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative flex justify-center gap-4">
    <li>
      <a
        class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current bg-[url('/src/assets/neighbourly.png')] bg-cover p-4"
        href="https://www.neighbourly.co.nz/business/astro-media"
        target="_blank"
      >
        <span class="sr-only">Astro on Neighbourly</span>
      </a>
    </li>
    <li>
      <a
        class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current bg-[url('/src/assets/instagram.png')] bg-cover p-4"
        href="https://www.instagram.com/astromedianz"
        target="_blank"
      >
        <span class="sr-only">Astro on Instagram</span>
      </a>
    </li>
  </ul>
</footer>
