---
import "@fontsource/inter/variable.css";
import Features from "~/components/features.astro";
import Intro from "~/components/intro.astro";
import Showcase from "~/components/showcase.astro";
import Splash from "~/components/splash.astro";
import Testimonials from "~/components/testimonials.astro";
import ContactUs from "~/components/contact-us.astro";
import Demos from "../components/demos.astro";
import Content from "~/components/content.astro";
import Layout from "~/layouts/Layout.astro";

import config from "~/data/config.json";

const title =
  config.businessName +
  " | Best Website Design in " +
  config.city +
  ", " +
  config.country;

const description = `Astro Media is a creative and energetic digital agency that values speed, helping your business reach new heights. We're based right here in ${config.city}, ${config.country} and we're all about website design and development that truly stands out. If you're looking for the best website developers near me, we've got you covered!`;
---

<Layout title={title} description={description}>
  <Splash>
    <div class="relative flex h-full flex-col items-center justify-center">
      <h1
        class="gradient-text mx-8 font-extrabold tracking-tighter text-8xl sm:mx-0"
      >
        We make
        <br />
        <span class="online-tag">cool looking</span> websites
      </h1>
      <h3
        class="website-tag gradient-text mx-8 mt-4 tracking-tighter text-white text-xl"
      >
      </h3>
      <h2
        class="subtitle mx-8 mt-4 font-extralight italic tracking-tighter text-stone-300 opacity-0 text-base"
      >
        Designing and developing for {config.city}, {config.country} since 2023.
      </h2>
    </div>
  </Splash>
  <div class="space-y-24 overflow-x-hidden px-8 py-32">
    <Intro />
    <Demos />
    <section class="flex flex-col">
      <a
        href="/contact-us"
        class="btn-primary btn btn-lg mx-auto h-24 w-fit text-center font-bold text-2xl"
        >Contact Us Today</a
      >
    </section>
  </div>
</Layout>

<script>
  import { gsap } from "gsap";
  import { TextPlugin } from "gsap/TextPlugin";
  gsap.registerPlugin(TextPlugin);

  gsap.to(".online-tag", {
    //Makes the word "Online" go white
    duration: 0.5,
    textShadow: "0px 0px 10px rgba(255, 255, 255, 0.5)",
    color: "white",
  });

  gsap.to(".website-tag", {
    //Subtitle animation
    duration: 0.6,
    text: {
      value: "By building websites that customers trust.",
      delimiter: "",
    },
  });

  gsap.to(".website-tag", {
    //Subtitle animation
    duration: 1,
    delay: 1,
    color: "white",
  });

  gsap.to(".subtitle", {
    //Subtitle animation
    duration: 1,
    delay: 1.5,
    opacity: 1,
  });
</script>
